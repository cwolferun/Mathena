<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.victor.project.mathena.Integral">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/IntegAnser"
            android:layout_width="368dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="475dp" />

        <Button
            android:id="@+id/solveIntegBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/IntegAnser"
            android:layout_alignStart="@+id/IntegPointB"
            android:layout_marginBottom="13dp"
            android:text="Solve"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="385dp" />

        <TextView
            android:id="@+id/between1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/IntegPointA"
            android:layout_centerHorizontal="true"
            android:text="Between The Points:"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="247dp" />

        <EditText
            android:id="@+id/IntegPointA"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="e.g x=2"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="291dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/IntegPointB"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="e.g x=4"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="291dp"
            android:layout_above="@+id/solveIntegBtn"
            android:layout_alignStart="@+id/IntegPointA"
            android:layout_marginBottom="46dp" />

        <EditText
            android:id="@+id/IntegFuncText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/between1"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="56dp"
            android:ems="10"
            android:hint="fucntion"
            android:inputType="textPersonName"
            android:linksClickable="false"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="119dp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
