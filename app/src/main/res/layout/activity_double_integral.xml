<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/test1"
    tools:context="com.victor.project.mathena.DoubleIntegral">

    <EditText
        android:id="@+id/diPointA"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dIntFunc"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/diSolve"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="x=1"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/diPointC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/diPointC" />

    <EditText
        android:id="@+id/diPointD"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/diSolve"
        android:layout_alignStart="@+id/diPointC"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="88dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="y=5"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/innerVar"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/dIntFunc"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="x"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/dIntFunc"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/dIntFunc" />

    <EditText
        android:id="@+id/dIntFunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/diPointA"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="28dp"
        android:layout_marginTop="184dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="5x^2+3y^3"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/innerVar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/innerVar"
        android:background="@android:color/white"
        android:text="d"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/dIntFunc"
        app:layout_constraintStart_toEndOf="@+id/innerVar"
        app:layout_constraintTop_toTopOf="@+id/dIntFunc" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dIntFunc"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/dIntFunc"
        android:background="@android:color/white"
        android:text="d"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/dIntFunc"
        app:layout_constraintStart_toEndOf="@+id/dIntFunc"
        app:layout_constraintTop_toTopOf="@+id/dIntFunc" />

    <EditText
        android:id="@+id/outerVar"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/textView4"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="y"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/dIntFunc"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/dIntFunc" />

    <EditText
        android:id="@+id/diPointB"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/diPointA"
        android:layout_below="@+id/diPointA"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="88dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="x=3"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/diPointD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/diPointD"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/diPointC"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/diPointA"
        android:layout_alignBottom="@+id/diPointA"
        android:layout_marginBottom="148dp"
        android:layout_marginStart="88dp"
        android:layout_toStartOf="@+id/outerVar"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="y=2"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/diPointC"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="End Points"
        app:layout_constraintBottom_toTopOf="@+id/diPointB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/diSolve"
        android:layout_width="108dp"
        android:layout_height="43dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_below="@+id/diPointB"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@mipmap/buttest2"
        android:text="Solve"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/diAnswer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="136dp"
        android:layout_height="135dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/dubi" />
</android.support.constraint.ConstraintLayout>
