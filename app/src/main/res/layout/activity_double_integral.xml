<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.victor.project.mathena.DoubleIntegral">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:id="@+id/outerVar"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:ems="10"
            android:hint="y"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dIntFunc"
            android:layout_toEndOf="@+id/dIntFunc"
            android:text="d"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/innerVar"
            android:layout_toEndOf="@+id/innerVar"
            android:text="d"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/dIntFunc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:ems="10"
            android:hint="5x^2+3y^3"
            android:inputType="textPersonName"
            android:layout_below="@+id/imageView"
            android:layout_alignStart="@+id/diPointA" />

        <EditText
            android:id="@+id/innerVar"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/dIntFunc"
            android:ems="10"
            android:hint="x"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/diPointD"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="y=5"
            android:inputType="textPersonName"
            android:layout_above="@+id/diSolve"
            android:layout_alignStart="@+id/diPointC" />

        <EditText
            android:id="@+id/diPointA"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:hint="x=1"
            android:inputType="textPersonName"
            android:layout_below="@+id/dIntFunc"
            android:layout_toStartOf="@+id/diSolve" />

        <EditText
            android:id="@+id/diPointB"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/diPointA"
            android:layout_below="@+id/diPointA"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:hint="x=3"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/diPointC"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="y=2"
            android:inputType="textPersonName"
            android:layout_alignBaseline="@+id/diPointA"
            android:layout_alignBottom="@+id/diPointA"
            android:layout_toStartOf="@+id/outerVar" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Points"
            android:layout_above="@+id/diPointC"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp" />

        <Button
            android:id="@+id/diSolve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView5"
            android:layout_below="@+id/diPointB"
            android:layout_marginTop="18dp"
            android:text="Solve" />

        <TextView
            android:id="@+id/diAnswer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/dubi" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
